
config sim sim_0
    option name 'Мобильная сеть “Билайн” (SIM-1)'
    option status '0'
    option rssi_min '10'
    option rssi_unit '%'
    option balance_min '30'
    option balance_unit 'руб.'
    option balance_ussd '*102#'
    option balance_mask 'Баланс %_RUB_% р.'
    option timeout '60'
    option timeout_unit 'сек.'

